generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())

    fullName String @unique
    email    String @unique
    password String

    verified DateTime?

    provider          String?
    providerAccountId String?

    cart Cart?

    isAdmin   Boolean @default(false)
    isDeleted Boolean @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    orders Order[]
}

model ProductGroup {
    id Int @id @default(autoincrement())

    codeGroup      String @unique
    name           String @unique
    aliasForSearch String @default("")

    products       Product[]
    positionNumber Int

    isDeleted Boolean @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id Int @id @default(autoincrement())

    productGroupId Int
    productGroup   ProductGroup @relation(fields: [productGroupId], references: [id])

    name            String
    description     String?     @db.Text
    aliasForSearch  String      @default("")
    price           Decimal     @db.Decimal(9, 2)
    unit            Unit        @default(KG)
    unitWeight      String
    minPartQuantity Decimal     @db.Decimal(9, 1)
    minQuantity     Decimal     @db.Decimal(9, 1)
    imageUrl        String
    positionNumber  Int
    type            ProductType @default(SEMI_FINISHED)

    isDeleted Boolean @default(false)

    cartItem   CartItem?
    orderItems OrderItem[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Cart {
    id Int @id @default(autoincrement())

    userId Int?  @unique
    user   User? @relation(fields: [userId], references: [id])

    totalAmount Int @default(0)

    token String

    items CartItem[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model CartItem {
    id Int @id @default(autoincrement())

    cartId Int
    cart   Cart @relation(fields: [cartId], references: [id])

    quantity Int

    productId Int     @unique
    product   Product @relation(fields: [productId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Order {
    id Int @id @default(autoincrement())

    userId Int?
    user   User? @relation(fields: [userId], references: [id])

    fullName     String  @db.VarChar(50)
    email        String? @db.VarChar(100)
    phone        String  @db.VarChar(12)
    deliveryType String  @db.VarChar(20)
    address      String? @db.VarChar(200)
    comment      String? @db.VarChar(500)

    shippingAmount Decimal     @db.Decimal(9, 2)
    totalAmount    Decimal     @db.Decimal(9, 2)
    items          OrderItem[]

    status OrderStatus

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model OrderItem {
    id Int @id @default(autoincrement())

    orderId Int
    order   Order @relation(fields: [orderId], references: [id])

    productId Int
    product   Product @relation(fields: [productId], references: [id])

    quantity Decimal @db.Decimal(9, 2)
    price    Decimal @db.Decimal(9, 2)
    amount   Decimal @db.Decimal(9, 2)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum ProductType {
    READY_MEAL
    SEMI_FINISHED
}

enum OrderStatus {
    PENDING
    ACCEPTED
    SUCCEEDED
    CANCELLED
}

enum Unit {
    KG // кілограми
    G // грами
    L // літри
    PCS // штуки
}
